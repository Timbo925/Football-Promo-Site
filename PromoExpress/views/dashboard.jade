doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Start Bootstrap - SB Admin Version 2.0 Demo
    // Core CSS - Include with every page
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='font-awesome/css/font-awesome.css', rel='stylesheet')
    // Page-Level Plugin CSS - Dashboard
    link(href='css/plugins/morris/morris-0.4.3.min.css', rel='stylesheet')
    link(href='css/plugins/timeline/timeline.css', rel='stylesheet')
    // SB Admin CSS - Include with every page
    link(href='css/sb-admin.css', rel='stylesheet')
  body
    div#warpper
       nav.navbar.navbar-default.navbar-fixed-top(role="navigation" style="margin-botton: 0")
          div.navbar-header
             button.navbar-toggle(data-toggle="collapse" data-target=".sidebar-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="index.html") Dashboard
          // Rechtor Optie Menu
          ul.nav.navbar-top-links.navbar-right
             li.dropdown
                a.dropdown-toggle(href="#" data-toggle="dropdown")
                   i.fa.fa-envelope.fa-fw
                   i.fa.fa-caret-down
                ul.dropdown-menu.dropdown-messages
                   li
                      a(href="#")
                         div
                            strong John Smith
                            span.pull-right.text-muted
                               em Yesterday
                         div Hello I say you hade some great scores.
                   li.divider
                   li
                      a.text-center(href="#")
                         strong Read All Messages
                         i.fa.fa-angle-right
          // end navbar-top-links
          div.navbar-default.navbar-static-side(role="navigation")
             div.sidebar-collapse
                ul#side-menu.nav
                   li
                      a(href="dashboard")
                         i.fa.fa-dashboard.fa-fw
                         | Dashbaord
                   li
                      a(href="index.html")
                         i.fa.fa-bar-chart-o.fa-fw
                         | Overview
                         span.fa.arrow
                      ul.nav.nav-second-level
                         li
                            a(href="teams") Teams
                         li
                            a(href="players") Players

       // end navbar-top-fixed
       div#page-wrapper
          div.row
             div.col-lg-12
                h1.page-header Dashboard

          div.row
             div.col-lg-8
                div.panel.panel-default
                   div.panel-heading
                      Table Example
                   div.panel-body
                      div.table-responsive
                         table#dataTables1.table.table-striped.table-bordered.table-hover
                            thead
                               tr
                                  th Id
                                  th Name
                                  th Team Name
                               tbody#tbodyPlayers
                                  tr
                                     td Loading...
                                     td Loading...
                                     td Loading...

             // end div-log-8
             div.col-lg-4
                div.panel.panel-info
                   div.panel-heading
                      | My Stats
                   div.panel-body
                      p Ranking: 1
                      p Total Points: 133

    // Core Scripts - Include with every page
    script(src='js/jquery-1.10.2.js')
    script(src='js/bootstrap.min.js')
    script(src='js/plugins/metisMenu/jquery.metisMenu.js')
    // Page-Level Plugin Scripts - Dashboard
    script(src='js/plugins/morris/raphael-2.1.0.min.js')
    script(src='js/plugins/morris/morris.js')
    // SB Admin Scripts - Include with every page
    script(src='js/sb-admin.js')
    // Page-Level Demo Scripts - Dashboard - Use for reference
    script(src='js/demo/dashboard-demo.js')
    // My scripts
    script(src='js/dashboard.js')
